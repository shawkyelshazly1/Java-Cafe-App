<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FAFAFA</item>
        <item name="colorPrimaryDark">#ECEFF1</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomeTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorControlActivated">#00E676</item>
        <item name="colorControlNormal ">#FFF</item>
    </style>

    <!-- Main Header Style -->
    <style name="main_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">35sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="main_page_buttons">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">#FF00</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">17sp</item>
        <item name="android:padding">7dp</item>
        <item name="android:layout_marginTop">150dp</item>
        <item name="android:layout_marginLeft">43dp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="name_field">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">210dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">7dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:hint">Your Name</item>
        <item name="android:textColorHint">#FFF</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

</resources>
